<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spaceship_view_form" model="ir.ui.view">
        <field name="name">space.ship.view.form</field>
        <field name="model">space.spaceship</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <group>
                            <field name="name"/>
                            <field name="number"/>
                        </group>
                        <group>
                            <field name="cost_per_gallon" />
                            <field name="gallons_per_tank" />
                            <field name="cost_per_tank" />
                        </group>
                        <group>
                            <field name="length" />
                            <field name="width" />
                            <field name="height" />
                            <field name="ship_volume" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Sale Orders">
                            <field name="sale_order_ids" />
                        </page>
                        <page string="Pilots">
                            <field name="pilot_ids" widget="many2many" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="spaceship_view_tree" model="ir.ui.view">
        <field name="name">space.ship.view.tree</field>
        <field name="model">space.spaceship</field>
        <field name="arch" type="xml">
            <tree string="Spaceships">
                <field name="name" readonly="1"/>
                <field name="number" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">spaceship.sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="spaceship_id" />
            </field>
        </field>
    </record>

    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">spaceship.res.partner.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="spaceship_id" />
            </field>
        </field>
    </record>

</odoo>